{
  "name": "hoprnet",
  "private": true,
  "repository": "https://github.com/hoprnet/hoprnet",
  "workspaces": [
    "packages/core",
    "packages/core-ethereum",
    "packages/ethereum",
    "packages/utils",
    "packages/hoprd"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pvi --topological-dev --no-private run build",
    "build:core": "yarn workspace @hoprnet/hopr-core run build",
    "build:admin": "yarn workspace @hoprnet/hoprd run buildAdmin",
    "lint": "npx prettier --check .",
    "lint:fix": "npx prettier --write .",
    "test": "yarn workspaces foreach -pvi --topological-dev --no-private run test",
    "test:core": "yarn build:core && yarn workspace @hoprnet/hopr-core run test",
    "test:hoprd": "yarn workspace @hoprnet/hoprd run test",
    "test:contracts": "yarn workspace @hoprnet/hopr-ethereum run test",
    "run:network": "yarn workspace @hoprnet/hopr-ethereum run network",
    "run:hoprd:xdai": "yarn workspace @hoprnet/hoprd exec -- yarn start --host=0.0.0.0:9080 --adminPort=2990 --restPort=2991 --password='xDai' --announce --data=/tmp/xdai --identity=/tmp/xdai-identity",
    "run:hoprd:alice": "yarn workspace @hoprnet/hoprd exec -- yarn dev --host=0.0.0.0:9092 --adminPort=3010 --restPort=3011 --provider=http://127.0.0.1:8545/ --password='local' --announce --testNoAuthentication --testUseWeakCrypto --testAnnounceLocalAddresses --testPreferLocalAddresses --data=/tmp/alice --identity=/tmp/alice-identity",
    "run:hoprd:bob": "yarn workspace @hoprnet/hoprd exec -- yarn dev --host=0.0.0.0:9093 --adminPort=3020 --restPort=3021 --provider=http://127.0.0.1:8545/ --password='local' --announce --testNoAuthentication --testUseWeakCrypto --testAnnounceLocalAddresses  --testPreferLocalAddresses --data=/tmp/bob --identity=/tmp/bob-identity",
    "run:hoprd:charlie": "yarn workspace @hoprnet/hoprd exec -- yarn dev --host=0.0.0.0:9094 --adminPort=3030 --restPort=3031 --provider=http://127.0.0.1:8545/ --password='local' --announce --testNoAuthentication --testUseWeakCrypto --testAnnounceLocalAddresses  --testPreferLocalAddresses --data=/tmp/charlie --identity=/tmp/charlie-identity",
    "run:faucet:alice": "curl localhost:3011/api/v1/address/hopr | xargs -I {} yarn workspace @hoprnet/hopr-ethereum exec -- yarn faucet --address {} --network localhost --ishopraddress true",
    "run:faucet:bob": "curl localhost:3021/api/v1/address/hopr | xargs -I {} yarn workspace @hoprnet/hopr-ethereum exec -- yarn faucet --address {} --network localhost --ishopraddress true",
    "run:faucet:charlie": "curl localhost:3031/api/v1/address/hopr | xargs -I {} yarn workspace @hoprnet/hopr-ethereum exec -- yarn faucet --address {} --network localhost --ishopraddress true",
    "run:faucet:all": "yarn run:faucet:alice && yarn run:faucet:bob && yarn run:faucet:charlie",
    "util:clean": "yarn workspaces foreach -pvi --topological-dev --no-private run rimraf node_modules/@hoprnet",
    "docs:generate": "yarn workspaces foreach -pvi --topological-dev --no-private run docs:generate"
  },
  "devDependencies": {
    "@ethersproject/cli": "^5.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "yargs": "^17.0.1"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  }
}
